<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
    <!--
        Added the constraints for entity Student.
    -->
    <changeSet id="20250907072931-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="classroom_id"
                                 baseTableName="student"
                                 constraintName="fk_student__classroom_id"
                                 referencedColumnNames="id"
                                 referencedTableName="class_room"
                                 />

        <addForeignKeyConstraint baseColumnNames="student_id"
                                 baseTableName="rel_student__course"
                                 constraintName="fk_rel_student__course__student_id"
                                 referencedColumnNames="id"
                                 referencedTableName="student"
                                 />

        <addForeignKeyConstraint baseColumnNames="course_id"
                                 baseTableName="rel_student__course"
                                 constraintName="fk_rel_student__course__course_id"
                                 referencedColumnNames="id"
                                 referencedTableName="course"
                                 />

        <addForeignKeyConstraint baseColumnNames="parent_id"
                                 baseTableName="student"
                                 constraintName="fk_student__parent_id"
                                 referencedColumnNames="id"
                                 referencedTableName="parent"
                                 />
    </changeSet>
</databaseChangeLog>
